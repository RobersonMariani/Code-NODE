<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8 my-3">
                        <h1 class="text-center">Criar Conta ou Entrar</h1>
                        <p class="text-center lead">Faça login ou crie sua conta abaixo.</p>
                        <%- include('includes/messages') %>
                            <div class="row">
                                <div class="col-lg">
                                    <h4>Faça seu cadastro</h4>
                                    <p>Não possui uma conta? Cadastre-se abaixo</p>
                                    <form class="form-cadastro" action="/enter/register" method="post">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                        <div class="mb-3">
                                            <label for="emailr" class="form-label">E-mail</label>
                                            <input type="email" class="form-control validate" id="emailr" name="email">
                                        </div>
                                        <div class="mb-3">
                                            <label for="passwordr" class="form-label">Senha</label>
                                            <input type="password" class="form-control validate" id="passwordr" name="password">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Enviar</button>
                                    </form>
                                </div>
                                <div class="col-lg">
                                    <h4>Entrar no sistema</h4>
                                    <p>Já possui uma conta? Faça login abaixo</p>
                                    <form class="form-login" action="/login" method="post">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                        <div class="mb-3">
                                            <label for="email" class="form-label">E-mail</label>
                                            <input type="email" class="form-control validate" id="email" name="email">
                                        </div>
                                        <div class="mb-3">
                                            <label for="password" class="form-label">Senha</label>
                                            <input type="password" class="form-control validate" id="password" name="password">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Enviar</button>
                                    </form>
                                </div>
                            </div>
                    </div>
                    <div class="col-lg-2"></div>
                </div>
            </div>
        </section>
        <%- include('includes/footer') %>