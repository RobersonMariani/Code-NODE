<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8 my-3">
                        <h1 class="text-center">Contato</h1>
                        <p class="text-center lead">Crie ou edite seu contato abaixo.</p>
                        <%- include('includes/messages') %>
                            <% if (contact._id) { %>
                                <form action="/contact/edit/<%= contact._id %>" method="post">
                                    <% } else {%>
                                        <form class="form-contact" id="form-contact" action="/contact/register" method="post">
                                            <% } %>
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                                <div class="mb-3">
                                                    <label for="name" class="form-label">Nome</label>
                                                    <input value="<%= contact.name %>" type="text" class="form-control validate"
                                                        id="name" name="name">
                                                </div>
                                                <div class="mb-3">
                                                    <label for="lastName" class="form-label">Sobrenome</label>
                                                    <input value="<%= contact.lastName %>" type="text"
                                                        class="form-control validate" id="lastName" name="lastName">
                                                </div>
                                                <div class="mb-3">
                                                    <label for="emailC" class="form-label">E-mail</label>
                                                    <input value="<%= contact.email %>" type="email"
                                                        class="form-control validate" id="emailC" name="email">
                                                </div>
                                                <div class="mb-3">
                                                    <label for="phone" class="form-label">Telefone</label>
                                                    <input value="<%= contact.phone %>" type="tel" class="form-control validate"
                                                        id="phone" name="phone">
                                                </div>
                                                <button type="submit" class="btn btn-primary">Salvar</button>
                                        </form>
                    </div>
                    <div class="col-lg-2"></div>
                </div>
            </div>
        </section>
        <%- include('includes/footer') %>