<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8 my-3">
                        <%= %>
                            <h1 class="text-center">Agenda</h1>
                            <p class="text-center lead">Seus contatos estão abaixo.</p>
                            <%- include('includes/messages') %>

                                <% if (contacts.length> 0) { %>
                                    <div class="responsive-table">
                                        <table class="table my-3 table-striped">
                                            <% contacts.forEach(contact=> { %>
                                                <tr>
                                                    <td>
                                                        <%= contact.name %>
                                                    </td>
                                                    <td>
                                                        <%= contact.lastName %>
                                                    </td>
                                                    <td>
                                                        <%= contact.email %>
                                                    </td>
                                                    <td>
                                                        <%= contact.phone %>
                                                    </td>
                                                    <td><a title="Editar Contato"
                                                            href="/contact/<%= contact._id %>"><span
                                                                class="material-symbols-outlined">
                                                                edit
                                                            </span></a>
                                                    </td>
                                                    <td><a class="text-danger" title="Excluir Contato"
                                                            href="/contact/delete/<%= contact._id %>"><span
                                                                class="material-symbols-outlined">
                                                                delete
                                                            </span></a></td>
                                                </tr>
                                                <% }) %>
                                        </table>
                                        <% } else { %>
                                            <p class="text-center lead">Não existem contatos na sua agenda. Faça Login ou cadastre um contato.</p>
                                            <% } %>
                                    </div>
                    </div>
                    <div class="col-lg-2"></div>
                </div>
            </div>
        </section>
        <%- include('includes/footer') %>